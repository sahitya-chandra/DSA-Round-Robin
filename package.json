{
  "name": "DSA-Round-Robin",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate": "pnpm --filter @repo/db run migrate",
    "db:studio": "pnpm --filter @repo/db run studio",
    "db:generate": "pnpm --filter @repo/db run generate",
    "db:migrate:reset": "pnpm --filter @repo/db run migrate:reset",
    "db:deploy": "pnpm --filter @repo/db run deploy",
    "db:seed": "pnpm --filter @repo/db run seed"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
